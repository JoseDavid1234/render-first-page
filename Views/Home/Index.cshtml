@model IEnumerable<Persona>

<h2>Lista de Personas</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var persona in Model)
        {
            <tr class="hov">
                <td>@persona.Id</td>
                <td>@persona.Nombre</td>
                <td>@persona.Apellido</td>
                <td>@persona.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@persona.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@persona.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create">Agregar Nueva Persona</a>
</p>

<style>
    .table {
        border-collapse: collapse;
        width: 100%;
        border: 1px solid rgb(92, 92, 92);
        cursor: default;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }
    thead :nth-child(1){
      background-color: #ccc;
    }

    .hov:hover {
        background-color: #f5f5f5;
    }
</style>